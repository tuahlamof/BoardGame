<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.huiyu.killertry.DisplayWaitingActivity">

    <TextView
        android:id="@+id/wait_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:layout_centerHorizontal="true"
        android:text="Wait"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/stop_waiting_and_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start the game!"
        android:layout_marginTop="40dp"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/host_start_the_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:layout_centerHorizontal="true"
        android:text="Host has start the game, ready?"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/enter_the_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter the game!"
        android:layout_marginTop="40dp"
        android:textSize="17sp"/>


</LinearLayout>
